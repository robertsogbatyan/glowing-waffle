# http://editorconfig.org
root = true

[*.{html,css,scss,js,jsx,ts,tsx,json}]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 100
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
